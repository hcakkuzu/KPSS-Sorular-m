@{
    var kullanicininRolleri = Roles.GetRolesForUser(WebSecurity.CurrentUserName);
    if(!kullanicininRolleri.Contains("Admin")){
           WebSecurity.Logout(); //çıkış yap
    }

    if(WebSecurity.IsAuthenticated) {
        Response.Redirect("~/Admin/Stats");
            }

    if(IsPost){
            var kadi=Request["username"];
            var pass=Request["password"];
            if(WebSecurity.Login(kadi,pass,true)){
                Response.Redirect("~/Admin/Stats");
            }
        }

    }


