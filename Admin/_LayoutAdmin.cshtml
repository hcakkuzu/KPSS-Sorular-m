<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
        <meta name="description" content="">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>Juba Yazılım | Admin</title>
        <!-- Bootstrap -->
        <link href="assets/sidebar.css" rel="stylesheet" media="screen">
        <!-- BASE CSS FILES -->
        <link rel="stylesheet" href="@Href("~/Dist/css/bootstrap.min.css")">
        <link rel="stylesheet" href="@Href("~/Dist/css/bootstrap-checkbox_radio.css")">
        <link rel="stylesheet" href="@Href("~/Dist/css/font-awesome.min.css")">
        <!-- BASE CSS FILES -->
    </head>

    <body>

        <div id="wrapper">

            <!-- Sidebar -->
            <div id="sidebar-wrapper">
                <ul class="sidebar-nav">
                    <li class="text-center"><h2 style="color: #fff;">@WebSecurity.CurrentUserName</h2>
                    <a href="@Href("~/Admin/Parola")">Şifre Değiştir</a>
                    <a href="@Href("~/Admin/Logout")">Çıkış Yap</a>
                    </li>

                    <li><hr></li>

                    <li><a href="@Href("~/Admin/Stats")">İstatistikler</a></li>
                    <li><a href="@Href("~/Admin/Uyeler")">Üyeler</a></li>
                    <li><a href="@Href("~/Admin/Mesajlar")">Mesajlar</a></li>
                    <li><a href="@Href("~/Admin/Sorular")">Sorular</a></li>
                    <li><a href="@Href("~/Admin/Yorumlar")">Yorumlar</a></li>
                </ul>
            </div>
            <!-- /#sidebar-wrapper -->
            <!-- Page Content -->
                                                                     

            

            <div id="page-content-wrapper">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-lg-12">
                            <a href="#menu-toggle" class="btn btn-default" id="menu-toggle"><i class="fa fa-bars"></i></a>
                            @RenderBody()
                        </div>
                    </div>
                </div>
            </div>

            <!-- /#page-content-wrapper -->
        </div>
        <!-- /#wrapper -->
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.4/jquery.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js" integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS" crossorigin="anonymous"></script>


        <!-- Menu Toggle Script -->
        <script>
            $("#menu-toggle").click(function(e) {
                e.preventDefault();
                $("#wrapper").toggleClass("toggled");
            });
        </script>

    </body>
</html>